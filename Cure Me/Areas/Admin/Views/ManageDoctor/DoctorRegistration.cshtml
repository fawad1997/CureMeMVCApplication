@model Cure_Me.Models.DoctorModel
@{
    ViewBag.Title = "Doctor Registration";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">

        @if (ViewBag.successMsg != null)
            {
            <div class="note note-success">
                <p>@ViewBag.successMsg</p>
            </div>
        }
        <!-- BEGIN PORTLET-->
        <div class="portlet light form-fit bordered">
            <div class="portlet-title">
                <div class="caption">
                    <i class="glyphicon glyphicon-pushpin font-red-mint"></i>
                    <span class="caption-subject font-red-mint sbold uppercase">Doctor Registration</span>
                </div>
            </div>
            <div class="portlet-body">
                <!-- BEGIN FORM-->
                @using (Html.BeginForm("DoctorRegistration", "ManageDoctor", new { @class = "form-horizontal form-bordered" }))
                {
                    <div class="form-body">
                        <div class="form-group form-md-line-input">
                            @*<label class="col-md-1"></label>*@
                            <div class="col-md-3">
                                <input name="Name" type="text" placeholder="Name" class="form-control font-green" />
                                <div class="form-control-focus"> </div>
                                <span class="help-block">Typing Name</span>
                            </div>
                            <div class="col-md-3">
                                <input name="Password" type="text" placeholder="Password" class="form-control font-green" />
                                <div class="form-control-focus"> </div>
                                <span class="help-block">Typing Password</span>
                            </div>
                            <div class="col-md-6">
                                <input name="Email" type="text" placeholder="Email" class="form-control font-green" />
                                <div class="form-control-focus"> </div>
                                <span class="help-block">Typing Email</span>
                            </div>
                            <br /><br />
                            <br /><br />
                            <div class="col-md-6">
                                <input name="Phone" type="text" placeholder="Phone" class="form-control font-green" />
                                <div class="form-control-focus"> </div>
                                <span class="help-block">Typing Phone</span>
                            </div>
                            <div class="col-md-3">
                                <input name="Experience" type="text" placeholder="Experience" class="form-control font-green" />
                                <div class="form-control-focus"> </div>
                                <span class="help-block">Typing Experience</span>
                            </div>
                            <div class="col-md-3">
                                <input name="Age" type="text" placeholder="Age" class="form-control font-green" />
                                <div class="form-control-focus"> </div>
                                <span class="help-block">Typing Age</span>
                            </div>
                            <br /><br />
                            <br /><br />
                            <div class="col-md-8">
                                <input name="Specialization" type="text" placeholder="Specialization" class="form-control font-green" />
                                <div class="form-control-focus"> </div>
                                <span class="help-block">Typing Specialization</span>
                            </div>
                            <div class="col-md-4">
                                <div class="md-radio-inline">
                                    <div class="md-radio has-success">
                                        <input type="radio" checked id="radio1" name="Gender" value="Male" class="md-radiobtn" />
                                        <label for="radio1">
                                            <span></span>
                                            <span class="check"></span>
                                            <span class="box"></span> Male
                                        </label>
                                    </div>
                                    <div class="md-radio has-error">
                                        <input type="radio" id="radio2" name="Gender" value="Fema;e" class="md-radiobtn" style="float:right" />
                                        <label for="radio2">
                                            <span></span>
                                            <span class="check"></span>
                                            <span class="box"></span> Female
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <br /><br />
                    <hr />
                    <div class="form-actions">
                        <div class="row">
                            <div class="col-md-offset-4 col-md-9">
                                <input type="submit" value="Submit" class="btn green">
                                <a href="javascript:;" class="btn btn-outline grey-salsa">Cancel</a>
                            </div>
                        </div>
                    </div><br />
                }
                <!-- END FORM-->
            </div>
        </div>
        <!-- END PORTLET-->
    </div>
</div>


